<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:dither="true">


    <item android:state_pressed="true">
        <shape
            android:shape="oval"
            android:useLevel="false">

            <solid android:color="@color/light_gary"/>
            <stroke
                android:width="0.4dp"
                android:color="@color/dark_gray"/>

            <size
                android:width="30dp"
                android:height="30dp"/>
        </shape>
    </item>
    <item>
        <shape
            android:shape="oval">

            <solid android:color="@color/white"/>
            <stroke
                android:width="0.4dp"
                android:color="@color/dark_gray"/>

            <size
                android:width="30dp"
                android:height="30dp"/>
        </shape>
    </item>
</selector>
